<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jingh.myapplication.activity.BookActivity">
    <ImageView
            android:id="@+id/book_image"
            android:layout_width="63dp"
            android:layout_height="90dp"
            android:background="#d0d0d2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="10dp" android:layout_marginTop="8dp"
    />


    <TextView
            android:id="@+id/book_name"
            android:layout_width="239dp"
            android:layout_height="38dp"
            android:text="圣墟"
            android:textColor="#3b3838"
            android:textSize="20dp"
            android:layout_marginStart="8dp" app:layout_constraintLeft_toRightOf="@+id/book_image"
            android:layout_marginLeft="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仙侠"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/book_image" android:layout_marginLeft="9dp"
             app:layout_constraintTop_toBottomOf="@+id/book_name"
    />

    <TextView
            android:id="@+id/update_time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="2分钟前"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/book_image" android:layout_marginBottom="7dp"
            app:layout_constraintLeft_toRightOf="@+id/book_image" android:layout_marginLeft="8dp"/>
    <TextView
            android:id="@+id/book_update_chapter"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="第九十八章 妖邪"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@+id/update_time"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBaseline_toBaselineOf="@+id/update_time"/>



</android.support.constraint.ConstraintLayout>
