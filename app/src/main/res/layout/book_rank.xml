<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:orientation="vertical">
    <!-- android:orientation="vertical" 垂直排列-->
    <!-- android:orientation="horizontal" 水平排列-->

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="#b4b6ec"
            android:layout_height="220dp">

        <ImageView
                android:id="@+id/book_man"
                android:layout_width="63dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/man_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintRight_toLeftOf="@+id/book_woman"/>

        <ImageView
                android:id="@+id/book_woman"
                android:layout_width="63dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/girl_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/book_man"/>

        <TextView
                android:id="@+id/book_man_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="男生爱看榜"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/book_man"
                android:layout_marginTop="2dp"
                app:layout_constraintRight_toRightOf="@+id/book_man"
                app:layout_constraintLeft_toLeftOf="@+id/book_man"/>



        <TextView
                android:id="@+id/book_woman_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="女生爱看榜"
                android:textSize="14dp"
                android:textColor="#cf0718"
                app:layout_constraintBaseline_toBaselineOf="@+id/book_man_text"
                app:layout_constraintLeft_toLeftOf="@+id/book_woman"
                app:layout_constraintRight_toRightOf="@+id/book_woman"/>


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="#99dddf"
            android:layout_height="220dp">




    </android.support.constraint.ConstraintLayout>
</LinearLayout>

