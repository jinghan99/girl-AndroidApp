<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg"
>

    <!--我的书架 书籍信息 显示-->
    <ImageView
            android:id="@+id/rank_book_image"
            android:layout_width="63dp"
            android:layout_height="90dp"
            android:background="@color/white_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
    />


    <TextView
            android:id="@+id/rank_book_name"
            android:layout_width="239dp"
            android:layout_height="22dp"
            android:text="圣墟"
            android:textColor="#3b3838"
            android:textSize="15dp"
            android:layout_marginStart="8dp" app:layout_constraintLeft_toRightOf="@+id/rank_book_image"
            android:layout_marginLeft="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/rank_book_short_intro"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="天生废材，遭遇龙神附体。继承了神龙的意念和能力，生鳞幻爪、御水龙息、行云降雨，肉身无敌。\r\n在这个人人都想屠龙的时代，李牧羊一直生活的很有压力。"
            android:textSize="10dp"
            android:lines="3"
            app:layout_constraintLeft_toRightOf="@+id/rank_book_image"
            android:layout_marginLeft="9dp"
             app:layout_constraintTop_toBottomOf="@+id/rank_book_name"
    />

    <TextView
            android:id="@+id/rank_book_author"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="柳下挥 著"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/rank_book_image" android:layout_marginBottom="7dp"
            app:layout_constraintLeft_toRightOf="@+id/rank_book_image" android:layout_marginLeft="8dp"/>


    <TextView
            android:id="@+id/rank_book_lately_follower"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="7818"
            android:textSize="14dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/rank_book_author"
            android:layout_marginRight="12dp"/>


</android.support.constraint.ConstraintLayout>
