<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jingh.myapplication.MainActivity">

    <LinearLayout
            android:layout_width="360dp"
            android:layout_height="46dp"
            tools:layout_editor_absoluteX="11dp"
            android:weightSum="1" tools:layout_editor_absoluteY="-2dp">


        <TextView
                android:text="姓名："
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:id="@+id/textView1"
                android:textSize="28sp"
                android:textColor="#bc1b1b"/>
        <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="请输入姓名"
                tools:layout_editor_absoluteX="167dp" tools:layout_editor_absoluteY="0dp"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
